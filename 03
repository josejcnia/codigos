    <script>
        document.addEventListener('input', function(e) {
            if (e.target.classList.contains('puntaje')) {
                calcularPuntajes();
            }
        });

        function calcularPuntajes() {
            let dimensiones = {
                'voz': { sum: 0, count: 0 },
                'cuerpo': { sum: 0, count: 0 },
                'ideas': { sum: 0, count: 0 },
                'conexion': { sum: 0, count: 0 }
            };

            document.querySelectorAll('.puntaje:checked').forEach(function(input) {
                let dimension = input.dataset.dimension;
                let value = parseInt(input.value);
                dimensiones[dimension].sum += value;
                dimensiones[dimension].count++;
            });

            let calificacionFinal = 0;
            let dimensionesValidas = 0;

            for (let dim in dimensiones) {
                let promedio = dimensiones[dim].count > 0 ? dimensiones[dim].sum / dimensiones[dim].count : 0;
                // Convertir el promedio de 1-4 a 1-7
                let promedioConvertido = promedio > 0 ? ((promedio - 1) / 3) * 6 + 1 : 0;
                document.getElementById('promedio_' + dim).textContent = promedioConvertido.toFixed(1);
                if (promedioConvertido > 0) {
                    calificacionFinal += promedioConvertido;
                    dimensionesValidas++;
                }
            }

            calificacionFinal = dimensionesValidas > 0 ? calificacionFinal / dimensionesValidas : 0;
            
            // Asegurarse de que la calificación final esté en el rango de 1 a 7
            calificacionFinal = Math.max(1, Math.min(7, calificacionFinal));
            
            document.getElementById('calificacion_final').textContent = calificacionFinal.toFixed(1);
        }
    </script>
